{
  "name": "Scalyr",
  "id": "adknown-scalyr-datasource",
  "type": "datasource",

  "partials": {
    "config": "public/app/plugins/datasource/simplejson/partials/config.html"
  },

  "metrics": true,
  "annotations": false,

  "info": {
    "description": "datasource connecting Scalyr's api to Grafana",
    "author": {
      "name": "Matthew Jourard, Adknown Inc.",
      "url": "https://adknown.com"
    },
    "logos": {
      "small": "img/scalyr_logo.png",
      "large": "img/scalyr_logo.png"
    },
    "keywords": [
      "Scalyr",
      "Adknown",
      "datasource"
    ],
    "links": [
      {"name": "GitHub", "url": "https://github.com/AdknownInc/grafana-scalyr-datasource-plugin"},
      {"name": "MIT License", "url": "https://github.com/AdknownInc/grafana-scalyr-datasource-plugin/blob/master/LICENSE"}
    ],
    "version": "0.2.0",
    "updated": "2018-08-26"
  },

  "dependencies": {
    "grafanaVersion": "5.3.x",
    "plugins": [ ]
  },

  "routes": [
    {
      "path": "query",
      "method": "POST",
      "url": "{{.JsonData.url}}/query",
      "headers": [
        {
          "name": "X-SCALYR-READ-KEY",
          "content": "{{.SecureJsonData.readtoken}}"
        },
        {
          "name": "X-SCALYR-WRITE-KEY",
          "content": "{{.SecureJsonData.writetoken}}"
        }
      ]
    }
  ]
}
